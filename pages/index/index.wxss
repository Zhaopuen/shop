/* 呼叫 动画 */

@-webkit-keyframes warn1 {
  0% {
    transform: scale(1.1);
    -webkit-transform: scale(1.1);
    opacity: 0.0;
  }

  25% {
    transform: scale(1.3);
    -webkit-transform: scale(1.3);
    opacity: 0.1;
  }

  50% {
    transform: scale(1.3);
    -webkit-transform: scale(1.3);
    opacity: 0.3;
  }

  75% {
    transform: scale(1.5);
    -webkit-transform: scale(1.5);
    opacity: 0.5;
  }

  100% {
    transform: scale(1.7);
    -webkit-transform: scale(1.7);
    opacity: 0.0;
  }
}

@-webkit-keyframes warn {
  0% {
    transform: scale(1);
    -webkit-transform: scale(1);
    opacity: 0.0;
  }

  25% {
    transform: scale(1.1);
    -webkit-transform: scale(1.1);
    opacity: 0.1;
  }

  50% {
    transform: scale(1.5);
    -webkit-transform: scale(1.5);
    opacity: 0.3;
  }

  75% {
    transform: scale(1.7);
    -webkit-transform: scale(1.7);
    opacity: 0.5;
  }

  100% {
    transform: scale(1.9);
    -webkit-transform: scale(1.9);
    opacity: 0.0;
  }
}


.pulse {
  position: absolute;
  left: 75rpx;
  width: 250rpx;
  height: 250rpx;
  top: 25rpx;
  border-radius: 50%;
  z-index: 1;
  opacity: 1;
  -webkit-animation: warn 2s infinite linear;
  -moz-animation: warn 2s infinite linear;
  animation: warn 2s infinite linear;
  -webkit-animation-iteration-count: infinite linear;
  -moz-animation-iteration-count: infinite linear;
  animation-iteration-count: infinite linear;
  box-shadow: 2rpx 2rpx 40rpx rgba(253, 219, 0, 0.5);
  background-color: rgba(253, 219, 0, 0.5);
}

.pulse1 {
  position: absolute;
  width: 250rpx;
  height: 250rpx;
  left: 75rpx;
  top: 25rpx;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  border-radius: 50%;
  z-index: 1;
  opacity: 0;
  -webkit-animation: warn1 2s infinite linear;
  -moz-animation: warn1 2s infinite linear;
  animation: warn1 2s infinite linear;
  -webkit-animation-iteration-count: infinite linear;
  -moz-animation-iteration-count: infinite linear;
  animation-iteration-count: infinite linear;
  box-shadow: 2rpx 2rpx 40rpx rgba(253, 219, 0, 0.8);
  background-color: rgba(253, 219, 0, 0.8);
}


