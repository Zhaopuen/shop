/**index.wxss**/
/* 认证 */
.approve {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9;
  width: 100%;
  box-sizing: border-box;
  padding: 0 60rpx;
  padding-top: 60rpx;
  overflow: hidden;
}
.approve .approve_ft {
  float: left;
	width: 80%;
	height: 72rpx;
	background-color: #222222;
	border-radius: 80rpx;
  box-sizing: border-box;
  padding: 11rpx 20rpx;
  opacity: 1;
  transition: .2s ease all;
}
.approve .approve_transition {
  opacity: 0;
}
.approve .approve_ft .approve_ico {
  width: 50rpx;
  height: 50rpx;
  float: left;
}
.approve .approve_ft .approve_txt {
  max-width: 336rpx;
  overflow: hidden;
  float: left;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #cccccc;
  line-height: 50rpx;
  margin-left: 8rpx;
}
.approve .approve_ft .approve_ico2 {
  width: 50rpx;
  height: 50rpx;
  float: right;
}
.approve .approve_rt {
  float: right;
  width: 15%;
  position: relative;
}
.approve .approve_rt .us_ico {
	width: 80rpx;
	height: 80rpx;
  border-radius: 50%;
  float: right;
}
.approve .approve_rt .tag_a {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 22rpx;
  height: 22rpx;
  box-sizing: border-box;
  border-radius: 50%;
  background-color: #fddb00;
  border: 5rpx solid #fff;
}
/* 呼叫 */
.content{
  margin-top: 45%;
}
.content .call_btn {
	width: 300rpx;
	height: 300rpx;
	background-color: #fddb00;
	box-shadow: 0rpx 10rpx 40rpx 0rpx rgba(253, 219, 0, 0.5);
  border-radius: 50%;
  margin: 0 auto;
  text-align: center;
}
.content .call_btn .call_num {
	font-size: 72rpx;
	color: #222222;
  padding-top: 70rpx;
}
.content .call_btn .call_btn_text {
	font-size: 30rpx;
	color: #444444;
  padding-top: 30rpx;
}
/* 改变数量 */
.content .barrel_number {
  width: 60%;
  margin: 0 20%;
  margin-top: 70rpx;
  overflow: hidden;
  text-align: center;
}
.content .barrel_number .reduce_num {
  width: 160rpx;
  height: 160rpx;
  float: left;
}
.content .barrel_number .reduce_num image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.content .barrel_number .barrel_num {
	font-size: 36rpx;
	line-height: 160rpx;
	color: #222222;
  display: inline-block;
}
.content .barrel_number .add_num {
  width: 160rpx;
  height: 160rpx;
  float: right;
}
.content .barrel_number .add_num image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
/* 重置按钮 */
.content .reset_num {
	width: 200rpx;
	height: 121rpx;
	background-color: #ffffff;
	box-shadow: 0rpx 10rpx 20rpx 0rpx rgba(170, 170, 170, 0.35);
	border-radius: 60rpx;
  line-height: 121rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 28rpx;
  color: #aaa;
  margin-top: 60rpx;
}

.content .call_btn_box {
  position: relative;
  width: 400rpx;
  height: 300rpx;
  left: 50%;
  transform: translateX(-50%);
}
.content .call_btn {
  position: absolute;
  width: 300rpx;
  height: 300rpx;
  background-color: #fddb00;
  box-shadow: 0rpx 10rpx 40rpx 0rpx rgba(253, 219, 0, 0.5);
  border-radius: 50%;
  left: 50rpx;
  text-align: center;
  z-index: 5;
}

.content .call_btn .call_num {
  font-size: 72rpx;
  color: #222;
  padding-top: 70rpx;
}

.content .call_btn .call_btn_text {
