/* 取消呼叫按钮 */

.content .reset_num {
  width: 200rpx;
  height: 121rpx;
  background-color: #fff;
  box-shadow: 0rpx 10rpx 20rpx 0rpx rgba(170, 170, 170, 0.35);
  border-radius: 60rpx;
  line-height: 121rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 28rpx;
