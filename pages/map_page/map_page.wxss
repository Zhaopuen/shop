/* pages/map_page/map_page.wxss */
/* 订单信息 */
.order {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
	height: 180rpx;
	background-color: #ffffff;
	box-shadow: 0px 10rpx 20rpx 0px rgba(170, 170, 170, 0.3);
  box-sizing: border-box;
  padding: 40rpx 26rpx;
  overflow: hidden;
  z-index: 9999999;
}
.order .order_info {
  float: left;
}
.order .order_info .order_title {
  font-size: 36rpx;
	color: #444444;
  margin-bottom: 10rpx;
}
.order .order_info .order_title text {
  font-weight: bold;
}
.order .order_info .order_text {
  font-size: 28rpx;
	color: #999999;
}
.order .order_ico {
  float: right;
  width: 80rpx;
  height: 80rpx;
  position: relative;
}
.order .order_ico image{
  width: 80rpx;
  height: 80rpx;
}
.order .order_ico .soli {
  position: absolute;
	width: 18rpx;
	height: 18rpx;
	background-color: #fddb00;
  top: 0rpx;
  right: 0rpx;
  border:4rpx solid #fff;
  border-radius: 50%;
}
/* 地图 */
.map_container {
  position: fixed;
  left: 0;
  width: 100%;
  top: 180rpx;
  bottom: 230rpx;
}
#map {
  height: 100%;
}
/* 司机信息 */
.site_content {
  box-sizing: border-box;
  padding: 30rpx 24rpx;
  position: fixed;
  height: 280rpx;
  left: 0;
  width: 100%;
  bottom: 0;
  z-index: 88888;
  background-color: #fff;
  box-shadow: 0px -10rpx 10rpx 0px rgba(170, 170, 170, 0.1);
  overflow: hidden;
}

.site_caption {
  width: 100%;
  overflow: hidden;
  margin-right: 20rpx;
}
.site_caption .site_ft {
  float: left;
  overflow: hidden;
}
.site_caption .site_fticon {
  width: 80rpx;
  height: 80rpx;
  float: left;
}
.site_caption .site_fticon image {
  width: 80rpx;
  height: 80rpx;
}
.site_caption .site_info {
  float: left;
  overflow: hidden;
}
.site_caption .site_info .title {
  font-size: 24rpx;
	color: #aaaaaa;
  margin-bottom: 4rpx;
}
.site_caption .site_info .name {
  font-size: 30rpx;
	color: #222222;
}
.site_rt {
  float: right;
  width: 50rpx;
  height: 50rpx;
}
.site_rt image {
  width: 50rpx;
  height: 50rpx;
}
.map_GPS {
  width: 600rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 36rpx;
  line-height: 101rpx;
  color: #222;
	height: 101rpx;
	background-color: #fddb00;
	box-shadow: 0px 10rpx 20rpx 0px rgba(253, 219, 0, 0.35);
	border-radius: 50rpx;
  margin-top: 40rpx;
}