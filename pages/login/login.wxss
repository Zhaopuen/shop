/* pages/login/login.wxss */
.login_box{
  width:100%;
  height:100%;
  position: fixed;
  background: #333;
}
.login_middle{
  width:70%;
  height:700rpx;
  overflow: hidden;
  position: absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  margin: auto;
  background:#fff;
  border-radius:20rpx;
}
/* .login_content{

} */
.login_top{
  height:300rpx;
  overflow: hidden;
  position: relative;
}
.login_top image{
  width:300rpx;
  height:300rpx;
  position: absolute;
  right:0;
  z-index:9999;
}
.login_top text{
  display: block;
  padding:130rpx 0 0 60rpx;
  color:#333;
  font-size: 40rpx;
  font-weight: bold;
}
.login_top span{
  display: block;
  width:45rpx;
  height:6rpx;
	background-color: #ffae00;
	border-radius: 10rpx;
  margin-left: 60rpx;
  margin-top: 10rpx;
}
.login_content{
  margin:40rpx 60rpx;
  line-height: 60rpx;
  color:#999;
  font-size: 32rpx;
}
.bottom{
  height:auto;
  overflow: hidden;
  /* position: relative; */
}
.login_btn{
  width:85%;
  height:100rpx;
  line-height: 100rpx;
  background: #333;
  color:#fff;
  text-align: center;
  font-size:34rpx;
  border-radius:60rpx;
  margin:0 auto;
}
.bottom image{
  width:130rpx;
  height:130rpx;
  position: absolute;
  bottom:-10rpx;
  left:0;
}